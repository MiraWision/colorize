    "./get-color-format": "./dist/get-color-format.js",
    "./get-luminance": "./dist/get-luminance.js",
    "./invert-color": "./dist/invert-color.js",
    "./is-dark": "./dist/is-dark.js",
    "./is-light": "./dist/is-light.js",
    "./is-valid-color": "./dist/is-valid-color.js",
    "./parse-color-numbers": "./dist/parse-color-numbers.js",
    "./shade": "./dist/shade.js",
    "./tint": "./dist/tint.js"
