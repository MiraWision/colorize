  "description": "A comprehensive color manipulation library for TypeScript, providing functionalities for color conversion, validation, gradient generation, and various color adjustments.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./adjust-brightness": "./dist/adjust-brightness.js",
    "./adjust-saturation": "./dist/adjust-saturation.js",
    "./apply-greyscale": "./dist/apply-greyscale.js",
    "./apply-sepia": "./dist/apply-sepia.js",
    "./blend-colors": "./dist/blend-colors.js",
    "./calculate-contrast": "./dist/calculate-contrast.js",
    "./change-opacity": "./dist/change-opacity.js",
    "./convert-color": "./dist/convert-color.js",
    "./extract-opacity": "./dist/extract-opacity.js",
    "./generate-multi-stepped-gradient": "./dist/generate-multi-stepped-gradient.js",
